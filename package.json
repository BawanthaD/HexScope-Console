{
  "name": "hexconsole",
  "version": "1.0.0",
  "description": "HexConsole desktop app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.bawantha.hexconsole",
    "productName": "HexConsole",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!node_modules/.cache/**/*"
    ],
    "win": {
      "target": "nsis",          
      "artifactName": "HexConsole-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": false,    
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  }
}
